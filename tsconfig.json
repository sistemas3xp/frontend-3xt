{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["app/components/*"],
      "@hooks/*": ["app/hooks/*"],
      "@routes/*": ["app/routes/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@features/*": ["features/*"],
      "@styles/*": ["styles/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
